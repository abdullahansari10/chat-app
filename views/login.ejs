<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Professional Portal</title>
    <%- include("partial/header") %>
  </head>
  <body>
    <%- include("partial/nav") %>
    <div class="login-container">
      <div class="login-card">
        <div class="login-header">
          <div class="logo">
            <div class="logo-icon"></div>
            <h1>Portal</h1>
          </div>
          <p class="welcome-text">
            Welcome back! Please sign in to your account.
          </p>
        </div>

        <form class="login-form" action="/user/login" method="POST">
          <div class="form-group">
            <label for="email">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="Enter your email"
              autocomplete="email"
            />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <div class="password-input">
              <input
                type="password"
                id="password"
                name="password"
                required
                placeholder="Enter your password"
                autocomplete="current-password"
              />
              <button
                type="button"
                class="toggle-password"
              >
                <span class="eye-icon">ğŸ‘ï¸</span>
              </button>
            </div>
          </div>

          <button type="submit" class="login-btn">
            <span class="btn-text">Sign In</span>
            <div class="loading-spinner" style="display: none"></div>
          </button>
        </form>

        <div class="login-footer">
          <p>Don't have an account? <a href="/user/signup">Sign up here</a></p>
        </div>
      </div>
    </div>
    <%- include("partial/footer") %>
    <script>
       $(".toggle-password").on("click", function () {
    let $input = $("#password");
    let $icon = $(this).find(".eye-icon");

    if ($input.attr("type") === "password") {
      $input.attr("type", "text");   // show password
      $icon.text("ğŸ™ˆ");              // change icon
    } else {
      $input.attr("type", "password"); // hide password
      $icon.text("ğŸ‘ï¸");
    }
  });
    </script>
  </body>
</html>
